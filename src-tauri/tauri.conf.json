{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Spotify Sorter",
  "mainBinaryName": "Spotify Sorter",
  "version": "1.0.0",
  "identifier": "com.spotifysorter.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Spotify Sorter",
        "width": 500,
        "height": 900,
        "minWidth": 450,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "shadow": true,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Spotify Sorter",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}