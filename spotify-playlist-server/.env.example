# Spotify Playlist Automation Server Configuration
# Copy this file to .env and fill in your values

# Spotify API credentials (required)
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_client_id_here
SPOTIFY_CLIENT_SECRET=your_client_secret_here

# Redirect URI - update with your server's address
# Make sure this matches what you set in Spotify Developer Dashboard
# Redirect URI - update with your server's address
# Make sure this matches what you set in Spotify Developer Dashboard
SPOTIFY_REDIRECT_URI=http://localhost:27196/auth/callback

# For Unraid, use your server's IP or hostname:
# SPOTIFY_REDIRECT_URI=http://192.168.1.100:27196/auth/callback

# Application settings
DEBUG=false
